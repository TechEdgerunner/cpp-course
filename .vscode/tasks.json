{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "C/C++: g++ arquivo de build ativo",
            "type": "shell",
            "command": "/usr/bin/g++",
            "args": [
                "-g",  // Geração de informações de depuração
                "${file}",  // O arquivo ativo
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"  // Saída no mesmo diretório com o mesmo nome base
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compilador g++"
        }
    ]
}
